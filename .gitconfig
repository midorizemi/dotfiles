[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
[core]
	editor = vim -c \"set fenc=utf-8\"
	precomposeunicode = true
	quotepath = false
[push]
	default = simple
[alias]
	ls = !git ls-files -t|perl -pe 's/\\/.*/\\//'|uniq -c
	ll = !git ls-files -cdmokt|perl -pe 's/\\/.*/\\//'|grep -v '/'
	la = ls-files -cdmokt
